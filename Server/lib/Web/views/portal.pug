extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%;')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div#menu-bar(style='display: flex; justify-content: flex-end; align-items: center; margin-top: 40px;')
			#kakao-add-channel-button
			a(target='_blank', href='https://cafe.naver.com/mahankkutu', style='background-color: #4078DC;')= L('CREATOR')
			a(target='_blank', href='https://www.youtube.com/@%EB%A7%88%ED%95%9C%EB%81%84%ED%88%AC', style='background-color: red;')= L('YOUTUBE')
		div.jjoriping(style='margin-top: -40px;')
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png', style='left: -270px;')
			img.jjoObj.jjoNose(src='/img/jjonose.png', style='left: -170px;')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png', style='left: -70px;')
			div.jjoDisplayBar(style='width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div(style='float: right; margin-top: -100px; width: 50%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: #2B2B2B;')
		iframe#kkutu-bulletin(width='70%', height='500px', src='/kkutu_bulletin.html')
		iframe(src="https://discord.com/widget?id=1105410544422363168&theme=dark", width="30%", height="500px", allowtransparency="true", frameborder="0", sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts")
	+separator(10)

block Bottom
	div.bottom-legal!= L('dotoli')
	div.bottom-legal!= L('dictionarySupport')