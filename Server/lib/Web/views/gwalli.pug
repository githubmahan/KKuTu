extends layout

block Subject
	title 마한끄투 관리페이지

block JS
	script(type="text/javascript", src="/js/in_admin.min.js")
	
block Middle
	fieldset
		legend 운영자확인
		input#db-password(type='password', placeholder='암호')
		input#db-lang(placeholder='테이블 (ko, en)')
	fieldset
		legend 단어 추가 요청 받기
		div
			button#injeong-go 조회
			div
				table
					thead: tr
						td 승인(체크시)
						td 링크
						td 단어
						td 주제
						td 요청한유저
						td 요청시간
					tbody#injeong-data
			button#injeong-everything 모두 승인
			button#injeong-nothing 모두 거절
			button#injeong-apply 적용
	fieldset
		legend 마한끄투 상점 DB 다루기
		div
			input#shop-word(placeholder='품목 (~ALL)')
			button#shop-go 조회
			button#shop-hide 숨기기
			div
				table
					thead: tr
						td 아이템코드
						td 가격
						td 판매된수
						td 기간
						td 품목
						td 업데이트시간
						td 설정
						td 한국어이름
						td 한국어설명
						td 영어이름
						td 영어설명
					tbody#shop-data
			button#shop-add 추가
			button#shop-apply 적용
	fieldset
		legend 마한끄투 유저 DB 다루기
		div
			input#user-id(placeholder='ID')
			input#user-nick(placeholder='닉네임')
			button#user-go 조회
			div
				table
					thead: tr
						td 유저아이디
						td 핑
						td 끄투
						td 인벤토리
						td 장착중
						td 별명
						td 별명변경시간
						td 설명
						td 접속중인서버
						td 마지막로그인
						td 차단(채팅차단이면chat)
						td 차단기간(영구차단이면공백)
						td 친구목록
					tbody#user-data
			button#user-apply 적용
	fieldset
		legend 마한끄투 유저 감시하기
		div
			input#gamsi-id(placeholder='ID (,로 구분)')
			button#gamsi-go 감시
			div
				table
					thead: tr
						td 유저아이디
						td 닉네임
						td 서버
					tbody#gamsi-data
	fieldset
		legend 마한끄투 단어 DB 다루기
		div
			input#db-word(placeholder='단어')
			button#db-go 조회
			div#word-data
				div#wd-id
				input#wd-flag
				table
					thead: tr
						td 뜻아이디
						td 타입(INJEONG, 1)
						td 주제
						td 뜻
						td 행동
					tbody#wd-data
			div#word-flag
			div#word-hit
			button#word-add 추가
			button#db-apply 적용
	fieldset
		legend 마한끄투 DB에 단어 추가하기
		div
			input#db-theme(placeholder='주제 (~부터 적으면 검색)')
			textarea#db-list(rows=20, cols=100)
			button#db-ok 확인
	fieldset
		legend 마한끄투에서의 인기 단어
		button#kpw-query 조회
		textarea#kpw-html
		div#kpw-table
		button#kpw-flush 반영
