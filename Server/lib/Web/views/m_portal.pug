extends m_layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')
	link(rel='stylesheet', href='/css/in_portal.css')

block JS
	script(type='text/javascript', src='/js/in_portal.min.js')

block Middle
	+separator(5)
	div(style='margin-left: calc(50% - 170px);')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title')
			img#logo(src='/img/kkutu/short_logo.png')
		div.jjoriping(style='margin-top: 10px;')
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png', style='top: 52px; left: -270px;')
			img.jjoObj.jjoNose(src='/img/jjonose.png', style='top: 62px; left: -170px;')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png', style='top: 52px; left: -70px;')
			div.jjoDisplayBar(style='float: left; margin-top: -30px; width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div#menu-bar(style='float: left; margin: 10px 0px 10px calc(50% - 136px); width: 100%;')
		#kakao-add-channel-button
		a(target='_blank', href='https://cafe.naver.com/mahankkutu', style='background-color: #4078DC;')= L('CREATOR')
		a(target='_blank', href='https://www.youtube.com/@%EB%A7%88%ED%95%9C%EB%81%84%ED%88%AC', style='background-color: red;')= L('YOUTUBE')
	div(style='float: left; margin-left: calc(50% - 160px);')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: #2B2B2B;')
		iframe#kkutu-bulletin(width='100%', height='300px', src='/kkutu_bulletin.html')
		iframe(src="https://discord.com/widget?id=1105410544422363168&theme=dark", width="100%", height="300px", allowtransparency="true", frameborder="0", sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts")
	+separator(10)

block Bottom
	div.bottom-legal!= L('dotoli')
	div.bottom-legal!= L('dictionarySupport')